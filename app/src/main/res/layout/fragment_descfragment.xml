<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".descfragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/single_item_design">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagegholder"
                android:layout_marginTop="40dp"
                android:layout_width="240dp"
                android:layout_height="228dp"
                android:src="@color/common_google_signin_btn_text_dark_disabled"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/nameholder"
                android:text="Candidate Name"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/emailholder"
                android:text="Candidate Course"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/download_btn"
                android:id="@+id/courseholder"
                android:textSize="28sp"
                android:textColor="#000"
                android:layout_marginBottom="90dp"/>

        </LinearLayout>

    </ScrollView>
</FrameLayout>