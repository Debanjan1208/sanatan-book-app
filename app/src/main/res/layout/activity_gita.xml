<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GitaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:text="1. Arjuna Visada Yoga  Arjuna's Dilemma"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="2. Sankhya Yoga Transcendental Knowledge"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter1"
                app:layout_constraintTop_toBottomOf="@+id/chapter1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="3. Karma Yoga Path of Selfless Service"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter2"
                app:layout_constraintTop_toBottomOf="@+id/chapter2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="4. Jnana Karma Sanyasa Yoga Path of Knowledge and the Disciplines of Action"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter3"
                app:layout_constraintTop_toBottomOf="@+id/chapter3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="5. Karma Sanyasa Yoga
Path of Renunciation"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter4"
                app:layout_constraintTop_toBottomOf="@+id/chapter4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="6. Dhyana Yoga
Path of Meditation"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter5"
                app:layout_constraintTop_toBottomOf="@+id/chapter5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="7. Gyaan Vigyana Yoga
Self-Knowledge and Enlightenment"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter6"
                app:layout_constraintTop_toBottomOf="@+id/chapter6" />

            <androidx.appcompat.widget.AppCompatButton
