                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="8. Akshara Brahma Yoga
Path of the Eternal God"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter7"
                app:layout_constraintTop_toBottomOf="@+id/chapter7" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="9. Raja Vidya Yoga
Yoga through the King of Sciences"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter8"
                app:layout_constraintTop_toBottomOf="@+id/chapter8" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:text="10. Vibhooti Yoga
Yoga through Appreciating the Infinite Opulences of God"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter9"
                app:layout_constraintTop_toBottomOf="@+id/chapter9" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:text="11. Vishwaroopa Darshana Yoga
Yoga through Beholding the Cosmic Form of God"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter10"
                app:layout_constraintTop_toBottomOf="@+id/chapter10"  />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="12. Bhakti Yoga
The Yoga of Devotion"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter11"
                app:layout_constraintTop_toBottomOf="@+id/chapter11" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="13. Ksetra Ksetrajna Vibhaaga Yoga
Yoga through Distinguishing the Field and the Knower of the Field"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter12"
                app:layout_constraintTop_toBottomOf="@+id/chapter12" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="14. Gunatraya Vibhaga Yoga
Yoga through Understanding the Three Modes of Material Nature"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter13"
                app:layout_constraintTop_toBottomOf="@+id/chapter13" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="15. Purushottama Yoga
The Yoga of the Supreme Divine Personality"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter14"
                app:layout_constraintTop_toBottomOf="@+id/chapter14" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="16. Daivasura Sampad Vibhaga Yoga
Yoga through Discerning the Divine and Demoniac Natures"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter15"
                app:layout_constraintTop_toBottomOf="@+id/chapter15" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="17. Sraddhatraya Vibhaga Yoga
Yoga through Discerning the Three Divisions of Faith"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter16"
                app:layout_constraintTop_toBottomOf="@+id/chapter16" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chapter18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chapters_btn"
                android:fontFamily="@font/aladin"
                android:padding="15dp"
                android:text="18. Moksha Sanyaas Yoga
Yoga through the Perfection of Renunciation and Surrender"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/chapter17"
                app:layout_constraintTop_toBottomOf="@+id/chapter17" />

        </LinearLayout>

    </ScrollView>

    <!--  Nav Bar-->
    <LinearLayout
        android:id="@+id/nav_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/nav_btn"
            android:onClick="homeAct"/>

        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/nav_btn_clk"
            android:onClick="gitaAct"/>

        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/nav_btn"
            android:onClick="AudioAct"/>

        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/nav_btn"
            android:onClick="AboutAct"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>